<h1>Login</h1>
<form action="/auth/login" method="POST">
    <p>
        Usuario:<input type="text" name="username">
    </p>
    <p>
        Password:<input type="text" name="password">
    </p>
    <input type="submit" value="Entrar">
</form>
{{#if message}}
    <p class="error">{{message}}</p>
{{/if}}
